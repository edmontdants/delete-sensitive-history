{
  "name": "Incognito Mode",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "A chrome extension to delete sensitive history automatically. No need to open the url in incognito.",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "background.bundle.js"
    ]
  },
  "permissions": [
    "storage",
    "history" ,
    "webNavigation" ,
    "*://*/*"
  ],
  "browser_action": {
    "default_icon": {
      "32": "images/icon-32.png"
    },
    "default_title": "Incognito Mode",
    "default_popup": "popup.html"
  }
}
